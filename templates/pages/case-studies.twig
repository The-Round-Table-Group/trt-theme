{% extends 'base.twig' %}

{% block content %}
    <div class="post-grid">
        {% for cs in case_studies %}
            <a class="post-grid__grid-item" href="{{ cs.link }}">
                <div class="image" style="background-image: url('{{ cs.thumbnail.src }}');"></div>
                <time>{{ cs.date|date('F j, Y') }}</time>
                <h4>{{ cs.title }}</h4>
            </a>
        {% endfor %}
    </div>

    {{ post.content }}
{% endblock %}
