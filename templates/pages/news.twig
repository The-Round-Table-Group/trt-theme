{% extends 'base.twig' %}

{% block content %}
    <h2>Latest Posts</h2>
    <div class="post-grid">
        {% for article in news %}
            <a class="post-grid__grid-item" href="{{ article.link }}">
                <h4>{{ article.title }}</h4>
                <time>{{ article.date|date('F j, Y') }}</time>
                <p></p>
            </a>
        {% endfor %}
    </div>

    {{ post.content }}
{% endblock %}
