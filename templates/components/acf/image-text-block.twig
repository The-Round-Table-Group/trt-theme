{# Block Name: Button Block #}
{# left_right_img check: left = true #}
{% set tc = fields.text_content %}

<section class="image-text-block">
    {% if not fields.image_left_or_right %}
        <div class="left-image">
            <img src="{{ fields.image.url }}" alt="{{ fields.image.alt }}" />
        </div>

        <div class="text-content">
            <p class="text-content__pill-tag">{{ tc.pill_tag }}</p>
            <h2 class="text-content__header gradient-header">{{ tc.header }}</h2>
            <p class="text-content__body">{{ tc.body }}</p>
            <p class="text-content__footer">{{ tc.footer }}</p>
        </div>
    {% else %}
        <div class="text-content">
            <p class="text-content__pill-tag">{{ tc.pill_tag }}</p>
            <h2 class="text-content__header gradient-header">{{ tc.header }}</h2>
            <p class="text-content__body">{{ tc.body }}</p>
            <p class="text-content__footer">{{ tc.footer }}</p>
        </div>

        <div class="right-image">
            <img src="{{ fields.image.url }}" alt="{{ fields.image.alt }}" />
        </div>
    {% endif %}
</section>
