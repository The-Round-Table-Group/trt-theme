    <div class="site-bar-container">
        <div class="site-bar-wrap">
            <p>More from The Round Table</p>

            <a
                class="external-link underline"
                href="https://sanskarsavvy.com"
                target="_blank"
                rel="noopener"
            >
                Sanskar Savvy
                <span>{% include 'assets/media/external-link-icon.svg' %}</span>
            </a>

            <a
                class="external-link underline"
                href="https://kashpatelproductions.com"
                target="_blank"
                rel="noopener"
            >
                Kash Patel Productions
                <span>{% include 'assets/media/external-link-icon.svg' %}</span>
            </a>
        </div>
    </div>
</section>
