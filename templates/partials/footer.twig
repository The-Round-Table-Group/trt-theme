<footer class="site-footer">
    <div class="site-footer__cta-row">
        {% if not is_front_page %}
            <a class="footer-logo" href="/">
                <img src="{{ options.full_logo.url }}" alt="The Round Table Group" />
            </a>
        {% else %}
            <img class="footer-logo" src="{{ options.full_logo.url }}" alt="The Round Table Group" />
        {% endif %}

        <div class="subscribe">
            {{ fn('do_shortcode', '[gravityform id="1" title="false" description="false"]') }}
        </div>
    </div>

    <div class="site-footer__nav-row">
        <div class="menu"></div>
    </div>

    <div class="site-footer__legal">
        <p>&copy; {{ date_year }} The Round Table Group. All rights reserved.</p>
        <div class="legal-link-row">
            <a class="underline" href="/privacy-policy">Privacy Policy</a>
            <a class="underline" href="/cookie-policy">Cookie Policy</a>
            <a class="underline" href="/data-policy">Data Policy</a>
            <a class="underline" href="/terms-of-use">Terms of Use</a>
            <a class="underline" href="/accessibility-statement">Accessibility Statement</a>
        </div>
    </div>
</footer>
