{
    "env": {
        "browser": true,
        "node": true,
        "es2022": true
    },

    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },

    "extends": [
        "eslint:recommended"
    ],

    "parserOptions": {
        "ecmaVersion": "latest"
    },

    "rules": {
        "semi": [2, "always"],
        "no-inner-declarations": "off",
        "no-undef": "off"
    }
}